{
  "name": "rmf-market-pulse-mcp",
  "version": "1.0.0",
  "description": "MCP server providing Thai Retirement Mutual Fund (RMF) market data via Model Context Protocol",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "thai-rmf",
    "mutual-funds",
    "retirement-funds",
    "thailand",
    "sec-api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tkhongsap/rmf-market-pulse-mcp"
  },
  "scripts": {
    "dev": "tsx server/index.ts",
    "start": "node dist/index.js",
    "build": "node scripts/build.mjs",
    "check": "tsc --noEmit",
    "test": "tsx tests/mcp/test-mcp-tools.ts",
    "test:coverage": "c8 --reporter=text --reporter=lcov --include='server/**/*.ts' --exclude='server/index.ts' tsx tests/mcp/test-mcp-tools.ts",
    "test:http": "./tests/mcp/test-mcp-http.sh",
    "test:security": "node tests/security/test-security.mjs",
    "test:integration": "./tests/integration/final-integration-test.sh",
    "test:user-scenarios": "./tests/user-scenarios/test-natural-questions.sh",
    "test:all": "npm run test && npm run test:http && npm run test:security && npm run test:integration",
    "data:rmf:generate-list": "tsx scripts/data-extraction/rmf/generate-rmf-fund-list.ts",
    "data:rmf:build-mapping": "tsx scripts/data-extraction/rmf/phase-0-build-mapping.ts",
    "data:rmf:fetch-all": "tsx scripts/data-extraction/rmf/phase-1-fetch-all-funds.ts",
    "data:rmf:identify-incomplete": "tsx scripts/data-extraction/rmf/identify-incomplete-funds.ts",
    "data:rmf:reprocess": "tsx scripts/data-extraction/rmf/reprocess-incomplete-funds.ts",
    "data:rmf:parse": "node scripts/data-parsing/rmf/parse-rmf-funds.js",
    "data:rmf:consolidate-csv": "tsx scripts/data-extraction/rmf/consolidate-to-csv.ts",
    "data:rmf:save-to-db": "tsx server/pipeline/db-saver.ts",
    "data:rmf:daily-refresh": "tsx server/pipeline/daily-refresh.ts",
    "data:esg:generate-list": "tsx scripts/data-extraction/esg/generate-thai-esg-fund-list.ts",
    "data:esgx:generate-list": "tsx scripts/data-extraction/esgx/generate-thai-esgx-fund-list.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@types/pg": "^8.15.6",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/node": "^20.16.11",
    "c8": "^10.1.3",
    "esbuild": "^0.25.0",
    "tsx": "^4.20.5",
    "typescript": "5.6.3"
  }
}
